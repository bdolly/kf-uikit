{
    "name": "kf-uikit",
    "version": "0.0.0",
    "description": "Kids First Design System",
    "main": "dist/index.js",
    "scripts": {
        "watch": "cross-env NODE_ENV=development webpack --watch --progress --config=webpack.config.js",
        "storybook": "start-storybook -p 9001 -c .storybook",
        "storybook:build": "build-storybook -c .storybook -o ./storybook-static/",
        "storybook:build:serve": "build-storybook -c .storybook -o ./storybook-static/$npm_package_version && node versionBump.js && cd ./storybook-static && python -m SimpleHTTPServer"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kids-first/kf-uikit.git"
    },
    "scripts": {
        "tailwind:css": "tailwind build src/css/tailwind.src.css -c  tailwind.js -o src/css/tailwind.css",
        "storybook": "yarn tailwind:css && start-storybook -p 9001 -c .storybook",
        "start": "yarn tailwind:css && react-scripts start",
        "build": "yarn tailwind:css && react-scripts build",
        "test": "react-scripts test --env=jsdom",
        "eject": "eact-scripts eject"
    },
    "devDependencies": {
        "@buildit/storybook-addon-versions": "^0.4.3",
        "@emotion/babel-plugin-core": "^0.6.6",
        "@storybook/addon-a11y": "^3.4.8",
        "@storybook/addon-actions": "^3.4.8",
        "@storybook/addons": "^3.4.8",
        "autoprefixer": "^9.1.1",
        "babel-eslint": "^8.2.6",
        "babel-loader": "^7.1.5",
        "babel-plugin-react-docgen": "^2.0.0-rc.1",
        "cross-env": "^5.1",
        "eslint": "^4.19.1",
        "eslint-config-airbnb": "^17.0.0",
        "eslint-config-prettier": "^2.9.0",
        "eslint-loader": "^2.1.0",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-jsx-a11y": "^6.1.1",
        "eslint-plugin-react": "^7.11.1",
        "tailwindcss": "^0.6.5",
        "eslint-plugin-prettier": "^2.6.2",
        "eslint-plugin-react": "^7.10.0",
        "extract-text-webpack-plugin": "^3.0.2",
        "mini-css-extract-plugin": "^0.4.1",
        "postcss": "^6.0.14",
        "postcss-loader": "^2.0.8",
        "prettier": "^1.14.0",
        "react-docgen": "^2.21.0",
        "style-loader": "^0.19.0",
        "tailwindcss": "^0.6.5",
        "webpack": "^4.16.5",
        "webpack-command": "^0.4.1"
    },
    "dependencies": {
        "@storybook/addon-info": "^3.4.8",
        "@storybook/addon-knobs": "^3.4.8",
        "@storybook/react": "^3.4.8",
        "chroma-js": "^1.3.7",
        "lodash": "^4.17.10",
        "n": "^2.1.12",
        "npm": "^6.3.0",
        "prop-types": "^15.6.2",
        "react": "^16.4.1",
        "react-dom": "^16.4.1"
    }
}
